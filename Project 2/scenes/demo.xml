<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="stuffCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="20" y="5" z="20" />
            <to x="0" y="0" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1.0" linear="0.0" quadratic="0.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
		<material id="greeMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="1.0" b="0.0" a="1.0" />
            <diffuse r="0.0" g="0.6" b="0.0" a="1.0" />
            <specular r="0.0" g="0.6" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

	<animations>
		<animation id="test">
			 <keyframe instant="2.0">
				<translate x="0.0" y="0.0" z="0.0" />
				<rotate angle_x="0" angle_y="0" angle_z="0" />
				<scale x="1" y="1" z="1" />
			</keyframe>
			<keyframe instant="4.0">
				<translate x="6" y="0.0" z="0.0" />
				<rotate angle_x="0" angle_y="0" angle_z="360" />
				<scale x="2" y="1" z="1" />
			</keyframe>
			<keyframe instant="6.0">
				<translate x="6" y="4.0" z="0.0" />
				<rotate angle_x="0" angle_y="0" angle_z="360" />
				<scale x="2" y="1" z="1" />
			</keyframe>
			<keyframe instant="9.0">
				<translate x="0.0" y="0.0" z="0.0" />
				<rotate angle_x="0" angle_y="0" angle_z="0" />
				<scale x="1" y="1" z="1" />
			</keyframe>
		</animation>
	</animations>

    <primitives>
        <primitive id="nurbPlane">
            <plane npartsU="10" npartsV="10" />
        </primitive>
        <primitive id="nurbCylinder">
            <cylinder2 base="5" top="5" height="5" slices="10" stacks="10" />
        </primitive>
        <primitive id="nurbPatch">
            <patch npointsU="3" npointsV="4" npartsU="10" npartsV="10" >
                <controlpoint xx="-1.5" yy="-1.5" zz="0.0" />
                <controlpoint xx="-2.0" yy="-2.0" zz="2.0" />
                <controlpoint xx="-2.0" yy="2.0"  zz="2.0" />
                <controlpoint xx="-1.5" yy="1.5"  zz="0.0" />
                <controlpoint xx="0.0"  yy="0.0"  zz="3.0" />
                <controlpoint xx="0.0"  yy="-2.0" zz="3.0" />
                <controlpoint xx="0.0"  yy="2.0"  zz="3.0" />
                <controlpoint xx="0.0"  yy="0.0"  zz="3.0" />
                <controlpoint xx="1.5"  yy="-1.5" zz="0.0" />
                <controlpoint xx="2.0"  yy="-2.0" zz="2.0" />
                <controlpoint xx="2.0"  yy="2.0"  zz="2.0" />
                <controlpoint xx="1.5"  yy="1.5"  zz="0.0" />
            </patch>
        </primitive>
        
    </primitives>

    <components>
        <component id="demoRoot">
            <transformation>
                <translate x="0" y="0" z="0" />
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
				<material id="greeMaterial" />
            </materials>
            <texture id="demoTexture" length_s="1.0" length_t="2.0"/>
            <children>
                <componentref id="nurbP" />
                <componentref id="nurbC" />
            </children>
        </component>
		
        <component id="nurbP">
            <transformation>
                <translate x="0" y="0" z="0" />
                <scale x="1" y="1" z="1" />
            </transformation>
			<animationref id="test"/> 
            <materials>
                <material id="demoMaterial" />
				<material id="greeMaterial" />
            </materials>
            <texture id="demoTexture" length_s="1.0" length_t="2.0"/>
            <children>
                <primitiveref id="nurbPatch" />
            </children>
        </component>
		
        <component id="nurbC">
            <transformation>
                <translate x="0" y="0" z="0" />
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
				<material id="greeMaterial" />
            </materials>
            <texture id="demoTexture" length_s="1.0" length_t="2.0"/>
            <children>
                <primitiveref id="nurbCylinder" />
            </children>
        </component>

    </components>
</lxs>